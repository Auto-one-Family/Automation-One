{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Aktor-Logik Schema",
  "description": "Schema für Aktor-Logik-Konfigurationen",
  "version": "1.0",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0$",
      "description": "Schema-Version"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Erstellungszeitpunkt"
    },
    "espId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "ESP-Geräte-ID"
    },
    "gpio": {
      "type": "integer",
      "minimum": 0,
      "maximum": 39,
      "description": "GPIO-Pin des Aktors"
    },
    "actuator": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ACTUATOR_PUMP", "ACTUATOR_LED", "ACTUATOR_HEATER", "ACTUATOR_FAN"],
          "description": "Aktor-Typ"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Aktor-Name"
        },
        "gpio": {
          "type": "integer",
          "minimum": 0,
          "maximum": 39
        }
      },
      "required": ["type", "gpio"]
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["sensor"],
            "description": "Abhängigkeitstyp"
          },
          "sensorId": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+-[0-9]+$"
          },
          "sensorGpio": {
            "type": "integer",
            "minimum": 0,
            "maximum": 39
          },
          "operator": {
            "type": "string",
            "enum": [">", "<", ">=", "<=", "==", "!="]
          },
          "threshold": {
            "type": "number"
          },
          "sensorType": {
            "type": "string",
            "enum": ["SENSOR_TEMP_DS18B20", "SENSOR_MOISTURE", "SENSOR_HUMIDITY", "SENSOR_LIGHT"]
          }
        },
        "required": ["type", "sensorGpio", "operator", "threshold"]
      }
    },
    "timers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
          },
          "end": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
          },
          "days": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0,
              "maximum": 6
            }
          },
          "enabled": {
            "type": "boolean"
          }
        },
        "required": ["start", "end", "days"]
      }
    },
    "configuration": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Logik aktiviert"
        },
        "evaluationInterval": {
          "type": "integer",
          "minimum": 5000,
          "maximum": 300000,
          "default": 30000,
          "description": "Auswertungsintervall in ms"
        },
        "failsafeState": {
          "type": "boolean",
          "default": false,
          "description": "Failsafe-Zustand"
        },
        "priority": {
          "type": "string",
          "enum": ["EMERGENCY", "MANUAL", "ALERT", "LOGIC", "TIMER", "SCHEDULE", "DEFAULT"],
          "default": "LOGIC"
        }
      },
      "required": ["enabled"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "createdBy": {
          "type": "string",
          "enum": ["user", "import", "system"]
        },
        "lastModified": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "createdBy"]
    }
  },
  "required": ["version", "espId", "gpio", "actuator", "configuration", "metadata"]
}
